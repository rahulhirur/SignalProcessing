
import dash
import dash_core_components as dcc
import dash_html_components as html

# Initialize the app
app = dash.Dash(__name__)

# Define the app layout
app.layout = html.Div([
    html.Div([
        html.H1("Welcome to the Dashboard!"),
        html.Br(),
        html.Button("A", id="btn-a", n_clicks=0),
        html.Button("B", id="btn-b", n_clicks=0),
    ], style={"textAlign": "center"}),
    html.Div(id="page-content")
])

# Define the callback for button A
@app.callback(
    dash.dependencies.Output("page-content", "children"),
    [dash.dependencies.Input("btn-a", "n_clicks")]
)
def display_address_a(n_clicks):
    if n_clicks > 0:
        return html.Div([
            html.H3("Folder A Selection:"),
            dcc.Input(id="address-a", type="text", placeholder="Enter folder address"),
        ])

# Define the callback for button B
@app.callback(
    dash.dependencies.Output("page-content", "children"),
    [dash.dependencies.Input("btn-b", "n_clicks")]
)
def display_address_b(n_clicks):
    if n_clicks > 0:
        return html.Div([
            html.H3("Folder B Selection:"),
            dcc.Input(id="address-b", type="text", placeholder="Enter folder address"),
        ])

if __name__ == '__main__':
    app.run_server(debug=True)




